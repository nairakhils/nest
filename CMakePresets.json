{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "cpu-debug",
            "displayName": "CPU Debug",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "NEST_ENABLE_OPENMP": "ON",
                "NEST_ENABLE_CUDA": "OFF"
            }
        },
        {
            "name": "cpu-release",
            "displayName": "CPU Release",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "-O3 -march=native -DNDEBUG",
                "NEST_ENABLE_OPENMP": "ON",
                "NEST_ENABLE_CUDA": "OFF"
            }
        },
        {
            "name": "cuda-release",
            "displayName": "CUDA Release",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG",
                "NEST_ENABLE_OPENMP": "ON",
                "NEST_ENABLE_CUDA": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "cpu-debug",
            "configurePreset": "cpu-debug"
        },
        {
            "name": "cpu-release",
            "configurePreset": "cpu-release"
        },
        {
            "name": "cuda-release",
            "configurePreset": "cuda-release"
        }
    ],
    "testPresets": [
        {
            "name": "cpu-debug",
            "configurePreset": "cpu-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "cpu-release",
            "configurePreset": "cpu-release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "cuda-release",
            "configurePreset": "cuda-release",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}



